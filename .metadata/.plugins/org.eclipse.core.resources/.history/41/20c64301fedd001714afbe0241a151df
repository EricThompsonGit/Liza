import hlt.GameMap;
import hlt.Move;
import hlt.Ship;

public class Assignment {

	int nShipId;
	int nTargetId;
	
	public Assignment( int shipId, int target ) {
		nShipId = shipId;
		nTargetId = target;
	}
	
	Move GetMove() {
		return null;
	}
	
	boolean IsValid(GameMap gameMap) {
		return false;
	}
	
	Ship FindShip( GameMap gameMap ) {
		 for (final Ship ship : gameMap.getMyPlayer().getShips().values()) {
			 if( ship.getId() == nShipId ) {
				 return ship;
			 }
		 }
		 return null;
	}

}
